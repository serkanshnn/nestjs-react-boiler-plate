{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../resources/assets/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      },
      {
        "include": "../resources/js/app.js",
        "outDir": "dist/public/assets",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
